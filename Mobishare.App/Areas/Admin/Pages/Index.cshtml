                    <div class="row">
                        <a href="/Admin/MapManagement/VisualizeMap"
                            class="btn mb-1 text-start b-d align-middle @(HttpContext.Request.Path == "/Admin/MapManagement/VisualizeMap" ? "b-g bold-500" : "")">
