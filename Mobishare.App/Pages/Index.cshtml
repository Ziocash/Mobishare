@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="position-relative mb-4 img-container">
    <img class="w-100" src="@Url.Content("~/gif/cycling.gif")" alt="Cycling gif">
    <h1 class="position-absolute top-50 start-50 translate-middle text-center text-highlight text-white">
        Ride Green. Live Clean.
    </h1>
</div>

<div class="container">
    <h2 class="h2 text-center w-100">Our Vehicles</h2>
    <div class="row">
        <!-- Bike -->
        <div class="col-md-4">
            <div class="card h-100 bg-light">
                <img src="@Url.Content("~/img/vehicle/bike.png")" class="card-img-top" alt="Bike">
                <div class="card-body">
                    <h5 class="card-title text-center">Bike</h5>
                    <p class="card-text text-center">The classic choice for a healthy and green ride.</p>
                </div>
            </div>
        </div>

        <!-- E-bike -->
        <div class="col-md-4">
            <div class="card h-100 bg-light">
                <img src="@Url.Content("~/img/vehicle/e-bike.png")" class="card-img-top" alt="E-bike">
                <div class="card-body">
                    <h5 class="card-title text-center">E-bike</h5>
                    <p class="card-text text-center">Effortless, electric-powered cycling for long rides.</p>
                </div>
            </div>
        </div>

        <!-- Scooter -->
        <div class="col-md-4">
            <div class="card h-100 bg-light">
                <img src="@Url.Content("~/img/vehicle/scooter.png")" class="card-img-top" alt="Scooter">
                <div class="card-body">
                    <h5 class="card-title text-center">Scooter</h5>
                    <p class="card-text text-center">Compact and fast, the perfect urban solution.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="cta-container text-center">
    <a href="#" class="btn-cta">Start Riding Now</a>
</div>

<!-- How It Works Section -->
<div class="container">
    <h2 class="h2 text-center w-100">How It Works</h2>
    <div class="steps-container">
        <div class="step">
            <div class="step-number">1</div>
            <h3 class="step-title text-center">Find</h3>
            <p class="step-text text-center">Locate the nearest vehicle using our app.</p>
        </div>
        <div class="step">
            <div class="step-number">2</div>
            <h3 class="step-title text-center">Unlock</h3>
            <p class="step-text text-center">Scan the QR code to unlock the vehicle.</p>
        </div>
        <div class="step">
            <div class="step-number">3</div>
            <h3 class="step-title text-center">Ride</h3>
            <p class="step-text text-center">Enjoy your journey and park responsibly.</p>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="features-section">
    <div class="container">
        <h2 class="h2 text-center w-100">Why Choose Us</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="feature-item">
                    <div class="feature-icon text-center">🌿</div>
                    <h3 class="feature-title text-center">Eco-friendly</h3>
                    <p class="feature-text text-center">Zero emissions, zero pollution. Help the environment with every ride.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-item">
                    <div class="feature-icon text-center">💰</div>
                    <h3 class="feature-title text-center">Affordable</h3>
                    <p class="feature-text text-center">Save money compared to taxis and private cars.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-item">
                    <div class="feature-icon text-center">🔄</div>
                    <h3 class="feature-title text-center">Flexible</h3>
                    <p class="feature-text text-center">Pick up and drop off vehicles anywhere, anytime.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="stats-section">
    <div class="container">
        <h2 class="h2 text-center w-100">Our Numbers</h2>
        <div class="stats-container">
            <div class="stat-item">
                <div class="stat-value text-center">10K+</div>
                <div class="stat-label text-center">Active Users</div>
            </div>
            <div class="stat-item">
                <div class="stat-value text-center">500+</div>
                <div class="stat-label text-center">Available Vehicles</div>
            </div>
            <div class="stat-item">
                <div class="stat-value text-center">15+</div>
                <div class="stat-label text-center">Cities Served</div>
            </div>
        </div>
    </div>
</div>

<!-- Pricing Section -->
<div class="container">
    <h2 class="h2 text-center w-100">Pricing</h2>
    <div class="pricing-container">
        <div class="pricing-card">
            <h3 class="pricing-title text-center">Basic</h3>
            <p class="pricing-vehicle text-center">Regular Bike</p>
            <div class="pricing-price text-center">€1.50<span>/30 min</span></div>
            <ul class="pricing-features">
                <li>Free unlocking</li>
                <li>City-wide parking</li>
                <li>Insurance included</li>
            </ul>
            <div class="text-center">
                <a href="#" class="pricing-button">Choose</a>
            </div>
        </div>
        <div class="pricing-card">
            <h3 class="pricing-title text-center">Plus</h3>
            <p class="pricing-vehicle text-center">E-bike</p>
            <div class="pricing-price text-center">€2.50<span>/30 min</span></div>
            <ul class="pricing-features">
                <li>Free unlocking</li>
                <li>City-wide parking</li>
                <li>Insurance included</li>
                <li>Electric assistance</li>
            </ul>
            <div class="text-center">
                <a href="#" class="pricing-button">Choose</a>
            </div>
        </div>
        <div class="pricing-card">
            <h3 class="pricing-title text-center">Turbo</h3>
            <p class="pricing-vehicle text-center">Electric Scooter</p>
            <div class="pricing-price text-center">€3.00<span>/30 min</span></div>
            <ul class="pricing-features">
                <li>Free unlocking</li>
                <li>City-wide parking</li>
                <li>Insurance included</li>
                <li>Speed up to 25 km/h</li>
            </ul>
            <div class="text-center">
                <a href="#" class="pricing-button">Choose</a>
            </div>
        </div>
    </div>
</div>